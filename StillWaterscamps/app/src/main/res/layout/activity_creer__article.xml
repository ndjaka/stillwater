<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        card_view:contentPadding="8dp"
        card_view:cardElevation="8dp"
        android:layout_margin="16dp"
        card_view:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_height="0dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PUBLIER"
                    android:id="@+id/btn_pulier"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.6"
                    android:layout_height="match_parent">
                    <Spiner
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/theme_article"
                        android:layout_height="30dp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.1"
                    android:id="@+id/plus_info_camp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:paddingTop="10dp"
                android:layout_height="0dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/img_article"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/desciption_camp"
                    android:text="add Image"
                    android:maxLines="5"
                    android:textSize="22dp"
                    android:background="#40000000"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_gravity="end|bottom"
                    android:id="@+id/periode_camp"
                    android:text="Du 20-12-2017  au  20-02-2018 "
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:layout_weight="0.3"
                android:layout_height="0dp">

                <EditText
                    android:id="@+id/contenu_article"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:inputType="text"
                    android:text="Add contenu" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

