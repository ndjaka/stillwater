<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/cardview_light_background"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.excellekitio.stillwaterscamps.Principale">
    <include layout="@layout/content_principale" />
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="#48c3de"
        fab:menu_colorPressed="#E75043"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="0sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="your_label_here"
        fab:menu_fab_show_animation="@anim/fab_scale_down"
        fab:menu_fab_hide_animation="@anim/fab_slide_in_from_left"
        >
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_add_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_to_media_black_24dp"
            fab:fab_size="mini"
            fab:fab_label="Menu item 1"
            android:onClick="ajouterDemande"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_list_demande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assignment_black_24dp"
            fab:fab_size="mini"
            fab:fab_label="Menu item 1"
            android:onClick="listDeemande"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_volunteer"
            fab:fab_size="mini"
            fab:fab_label="lister les participants"
            android:onClick="listepartcipant"/>
        <!--<com.github.clans.fab.FloatingActionButton-->
            <!--android:id="@+id/menu_d"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_edit_black_24dp"-->
            <!--android:onClick="modifiercamps"-->
            <!--fab:fab_size="mini"-->
            <!--fab:fab_label="Menu item 1" />-->
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_accessibility_black_24dp"
            android:onClick="creercamps"
            fab:fab_size="mini"
            />
    </com.github.clans.fab.FloatingActionMenu>



</RelativeLayout>
